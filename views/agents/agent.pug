                li
                  a.active(href='/sales_agents')
                    i.fa.fa-sticky-note-o(aria-hidden='true')
                    | Purchases
                li
                  a(href='#')
                    i.fa.fa-bookmark-o(aria-hidden='true')
                    | item
                li
                  a(href='#')
                    i.fa.fa-calendar-check-o(aria-hidden='true')
                    | calender
                li
                  a(href='/sales_agents')
