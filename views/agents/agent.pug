          .row
            // sidebar
            .col-xl-2.col-lg-3.col-md-4.sidebar.fixed-top
              a.navbar-brand.admin(href='#') Agents
              .admin-info
                //- img(src='/public/img/91.jpg', alt='', width='')
                //- a.admin-name(href='#') Bp mike
              ul.sidebar-link
                li
                  a(href='/sales_agents')
                    i.fa.fa-home(aria-hidden='true')
