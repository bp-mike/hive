  <!--section -->
  <div class="products">
    <div class="col-12 narrow text-center">
      <h1 class="heading">toys</h1>

      <!---------products------------->
      <div class="card-deck">
        each product in products
          if product.category == "toys"
            div.card
              img(src='/img/'+ product.image alt="image" width="50" class="card-img-top" )
              .card-body.text-left
                table
                  tr 
                    th
                      a(href="/product/"+product._id)
                        | #{product.product}
                  tr
                    th Price                  
                  tr
                    td #{product.price}.00ugx
                  tr
                    th Make
                  tr
                    td #{product.make}
      </div>
      <!---------end of products----------->
    </div>
  </div>

