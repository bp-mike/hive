            // end of top-nav
            // end of nvbar
            // model
            #sign-out.modal.sign-out-model
              .modal-dialog
                .modal-content
                  // 
                  .modal-header
                    h4 sign-out
                    button.close(type='button', data-dismiss='modal') x
                  .modal-body
                    | Are you sure you want to leave?
                  .modal-footer
                    button.btn(type='button', data-dismiss='modal') cancel
                    button.btn.btn-danger.sign-out-btn(type='button', data-dismiss='modal') Sign out
            // end of model
            // table section
            section.table-section
              .container-fluid
                .row
                  .col-xl-10.col-lg-9.col-md-8
                    .row
                      .col-12
                        .table-header
                          h3 Staff
                          button.btn(data-toggle='modal', data-target='#addAgent')
                            i.fa.fa-user-plus(aria-hidden='true')
                            |  Add Agent
                        table.table.table-striped.table1
                          thead
                            tr
                              th #
                              th First Name
                              th Second Name
                              th Date
                              th Contact
                          tbody
                            tr
                              th 1
                              td John
                              td $2000
                              td 25/05/2018
                              td
