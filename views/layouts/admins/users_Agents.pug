                              td $2000
                              td 25/05/2018
                              td
                                button.btn.btn-sm(type='button') Message
                            tr
                              th 4
                              td Mary
                              td $2000
                              td 25/05/2018
                              td
                                button.btn.btn-sm(type='button') Message
                            tr
                              th 5
                              td Bob
                              td $2000
                              td 25/05/2018
                              td
                                button.btn.btn-sm(type='button') Message
                      .col-12
                        // --------add Agent modal----------
                        #addAgent.modal.add_agent_model
                          .modal-dialog
                            .modal-content
                              .heading Add Sales Agent
                              form(method='POST', action='/home/register')
                                // --------------names-------------------
                                .form-row
                                  .form-group.col-md-6
                                    label(for='firstname') First Name
                                    input#firstname.form-control(name='firstname', type='text')
                                  .form-group.col-md-6
                                    label(for='lastname') Last Name
                                    input#lastname.form-control(name='lastname', type='text')
                                .form-group
                                  label(for='username') User Name
                                  input#username.form-control(name='username', type='text', placeholder='User Name', required='')
                                .form-row
                                  .col.form-group
                                    label.form-check.form-check-inline(for='gender')
                                    input.form-check-input(name='gender', value='male', type='radio')
                                    span.form-check-label Male
                                    label.form-check.form-check-inline(for='gender')
                                    input.form-check-input(name='gender', value='female', type='radio')
                                    span.form-check-label Female
                                // -------------end of names------------
                                // ----------NIN----------
                                .form-row
                                  .form-group.col-md-6
                                    label(for='email') Email
                                    input#inputEmail4.form-control(name='email', type='email')
                                  .form-group.col-md-6
                                    label(for='password') Password
                                    input#password.form-control(name='password', type='password')
                                .form-group
                                  label(for='nin') National ID Number (NIN)
                                  input#username.form-control(name='nin', type='text', required='')
                                // -------NIN---------
                                .form-group
                                  label(for='address') Address
                                  input#inputAddress.form-control(name='address', type='text')
                                .form-group
                                  label(for='city') City
                                  select#city.form-control.custom-select(name='city')
                                    option(selected='') Choose...
                                    option(value='kampala') kampala
                                    option(value='enttebbe') Enttebe
                                    option(value='kyadondo') kyadondo
                                    option(value='wakiso') wakiso
                                button.btn(type='button', data-dismiss='modal') cancel
                                button.btn(type='submit') Add
                        // -------end of Agent modal----------
                        // end of table section
